.products, .product
    --products-border-color: #ecedf2

    @media mobile
        .owl-pagination
            display: none

    &__title
        padding: 50px 0 20px
        color: var(--secundary)
        text-align: center
        font-weight: bold
        font-size: 18px

    &__name
        display: block
        overflow: hidden
        margin-bottom: 20px
        height: 34px
        color: var(--tertiary)
        font-weight: regular
        font-size: 14px
        line-height: 16px

    &__actions
        .button
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            width: 100%
            height: 40px
            border-radius: 0 0 2px 2px
            font-weight: bold
            font-size: 14px

            .ico
                margin-top: -4px
                margin-right: 5px
                width: 10px
                height: 15px
                color: var(--secundary)

        @media desktop
            visibility: hidden
            opacity: 0
            transition: all .2s ease
            transform: translateY(10px)

            .products__item:hover &
                visibility: visible
                opacity: 1
                transform: translateY(0)

        @media mobile
            display: none

    &__main
        flex: 1
        padding: 0 30px
        min-height: 1

    &__case
        display: flex
        flex-flow: column nowrap
        border-radius: 2px
        box-shadow: none

        @media desktop
            border: solid 1px transparent
            transition: all .2s ease

            .products__item:hover &
                border-color: var(--products-border-color)
