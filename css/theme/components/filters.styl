.filters
    --filters-border-color: #ecedf2

    &__show
        width: 100%
        height: 46px
        border-radius: 0
        background: var(--secundary)
        box-shadow: 300px 0 0 var(--secundary), -300px 0 0 var(--secundary)
        text-transform: uppercase
        font-weight: bold
        font-size: 14px

        @media desktop
            display: none

        &:hover
            background: var(--secundary)
            color: var(--secundary-contrast)

    @media desktop
        .title
            display: flex
            justify-content: flex-start
            align-items: center
            height: 32px
            color: var(--secundary)
            text-transform: uppercase
            font-weight: bold
            font-size: 16px

        &__filter
            box-shadow: 0 0 0 1px var(--filters-border-color)

            .label, .count
                color: var(--tertiary)
                font-weight: regular
                font-size: 13px

        &__name
            color: var(--secundary)
            text-transform: uppercase
            font-weight: bold
            font-size: 16px

@media mobile
    body:not(.up) .filters > .title
        display: none